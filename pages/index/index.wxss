/**index.wxss**/
.calendar-root{
  width:100%;
  height:100%;
  /*box-sizing: border-box;*/
}
.calendar-navbar{
  font-family: simhei;
  display: flex;
  justify-content: center;
  align-items:center;
  background-color:#FFFACD;
  height:83rpx;
}
.calendar-navbar-button{
  flex:1;
  width:100rpx;
  text-align: center;
  font-size:30rpx;
}
.calendar-navbar-date{
  flex-grow:1;
  width:150rpx;
  text-align: center;
}
.calendar-head{
  display: flex;
  justify-content: center;
  align-items:center;
  height:100rpx;
}
.calendar-head view{
  flex:1;
  text-align: center;
}
.calendar-body-rows{
  display: flex;
  align-items:center;
  height:128rpx;
}
.calendar-body-cols{
  display: flex;
  flex:1;
  align-items:center;
  height:100%;
}
.calendar-body-item{
  display: block;
  text-align: center;
  align-items:center;
  width:100%;
  height:100%;
}
.calendar-body-day{
  margin:0 20rpx;
  text-align: center;
  width:66%;
  height:54%;
}
.calendar-body-day view{
  width:100%;
  padding:14rpx 0;
}
.infoIsShow{
  border: 2rpx solid #FF8C00;
  border-radius: 50%;
}
.isToday{
  background-color: #FF8C00;
  border-radius: 50%;
  color:#fff;
}
.calendar-body-dayex{
  margin:4rpx;
  font-size:26rpx;
  text-align: center;
  color:#FF8C00;
}